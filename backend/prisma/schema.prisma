datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Customer {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  hashed_pass String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  accounts Account[]
}

model Account {
  id           Int      @id @default(autoincrement())
  customer_id  Int
  type_id      Int
  balance      Decimal  @default(0)
  credit_limit Int      @default(0)
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  customer    Customer    @relation(fields: [customer_id], references: [id])
  accountType AccountType @relation(fields: [type_id], references: [id])
}

model AccountType {
  id   Int    @id @default(autoincrement())
  type String @unique

  accounts Account[]
}
